---
import Footer from "../components/Footer.astro";
import HeroImage from "../components/HeroImage.astro";
import Layout from "../layouts/Layout.astro";
import { CONTACT } from "../consts";

import { myFade } from "../components/interactions/transitions/fade";
import { slide } from "astro:transitions";

const title = "";
const description = "";
const image = {
  src: "/assets/images/mikolaj_madejski.jpg",
  alt: "",
};
---

<Layout
  description="I’m Mikołaj Madejski. Passionate creator of media. I do designs."
>
  <main>
    <article>
      <div class="hero-image__wrapper">
        <div class="hero-image__container">
          <HeroImage image={image} />
        </div>
        <div class="hero-image__deco">
          <div class="hero-image__text hero-image__hi display-1">Hi!</div>
          <div class="hero-image__content visible-large">
            <h2 class="hero-image__title h5">WHO I AM?</h2>
            <p class="hero-image__text">
              I’m Mikołaj Madejski. Passionate creator of media. I do designs.
            </p>
          </div>
          <div class="hero-image__info">
            <a
              href={`phone:${CONTACT.phone.replaceAll(" ", "")}`}
              class="info__phone">{CONTACT.phone}</a
            >
            <a href={`mailto:${CONTACT.mail}`} class="info__mail"
              >{CONTACT.mail}</a
            >
          </div>
        </div>
      </div>
      <div class="prose">
        <div class="hero-image__content visible-small">
          <h2 class="hero-image__title h5">WHO I AM?</h2>
          <p class="hero-image__text">
            I’m Mikołaj Madejski. Passionate creator of media. I do designs.
          </p>
        </div>

        <h2 class="h5">LET’S DO THE STUFF</h2>
        <p>
          Inspired by Toy Story in childhood, I have started exploring design
          softwares for my own.
          <br />
          I’m Apple fun. I know that the hardest thing is to make design simple.
          But the process of designing brings so much fun!
        </p>
        <div class="footer__wrapper">
          <Footer />
        </div>
        <hr />
        <h2 class="h5">SOFTWARE</h2>
        <p>
          Blender, Unreal Engine, Fusion 360, RizomUV, Substance Painter,
          Photoshop, Illustrator, After Effects, Apple Motion, Final Cut Pro,
          Figma
        </p>
      </div>
    </article>
  </main>
</Layout>

<style lang="scss">
  @import "../styles/abstract/_breakpoints.scss";

  .hero-image__deco {
    max-width: 480px;
    width: 100%;
    margin: auto;
  }

  .hero-image {
    // opacity: .1;

    &__wrapper {
      position: relative;
      display: grid;
      grid-template-columns: 1fr;
      grid-template-rows: 1fr;

      margin-bottom: 50px;

      @include bp(small) {
        margin-bottom: 100px;
      }

      // > * {
      //   // outline: 1px solid green;
      //   grid-column: 1 / 1;
      //   grid-row: 1 / 1;
      // }
    }

    &__container,
    &__deco {
      // outline: 1px solid green;
      grid-column: 1 / 1;
      grid-row: 1 / 1;
    }

    &__deco {
      z-index: 1;
      // outline: 1px solid red;
      width: 100%;
      display: flex;
      margin-bottom: clamp(25px, 10%, 100px);
      align-items: center;
    }

    &__content {
      &.visible-small {
        margin-bottom: 50px;
        display: block;
        @include bp(small) {
          display: none;
        }
      }
      &.visible-large {
        display: none;
        @include bp(small) {
          display: initial;
        }
      }
    }

    &__text {
      display: flex;
      max-width: 320px;
      // line-height: 1.3;
      letter-spacing: 0.28px;
    }

    &__info {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
    }

    &__gradient {
      // outline: 1px solid red;
      // position: absolute;
      inset: 0;
      z-index: 1;

      background: linear-gradient(
        175deg,
        rgba(217, 217, 217, 0) 15%,
        rgba(0, 0, 0, 0.82) 101%
      );
      background-blend-mode: multiply;
    }

    &__hi,
    &__info {
      // outline: 1px solid blue;
      position: absolute;

      @include bp(small) {
        position: fixed;
      }
    }

    &__hi {
      left: 12.5%;
      top: 12.5%;
      @include bp(small) {
        left: 6%;
        top: initial;
      }
    }

    &__info {
      right: 12.5%;
      bottom: 12.5%;
      @include bp(small) {
        right: 6%;
        bottom: initial;
      }
    }
  }

  .footer__wrapper {
    margin: 105px 0 135px 0;
  }

  hr {
    margin-bottom: 100px;
  }
</style>
